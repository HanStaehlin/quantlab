{
    "data": {
        "train": {
            "dataset": {
                "transform": {
                    "class": "TransformA",
                    "kwargs": {"augment": true}
                }
            },
            "dataloader": {"bs": 256}
        },
        "valid": {
            "dataset": {
                "transform": {
                    "class": "TransformA",
                    "kwargs": {"augment": false}
                }
            },
            "dataloader": {"bs": 512}
        }
    },
    "network": {
        "class": "VGG7",
        "kwargs": {
            "capacity": 1
        },
        "quantize": {
            "function": "quantize_pact",
            "kwargs": {
                "config": {
                    "PACTConv2d": {
                        "quantize": "per_layer",
                        "init_clip": "sawb",
                        "learn_clip": false,
                        "n_levels": {

                            "1": 4,
                            "2": 4,
                            "3": 4,
                            "4": 4,
                            "5": 4
                        }
                    },
                    "PACTLinear": {
                        "quantize": "per_layer",
                        "init_clip": "sawb",
                        "learn_clip": false,
                        "symm_wts": true,
                        "n_levels": {
                            "0": 4,
                            "1": 4
                        }
                    },
                    "PACTUnsignedAct": {
                        "init_clip": "max",
                        "n_levels": {
                            "0": 4,
                            "1": 4,
                            "2": 4,
                            "3": 4,
                            "4": 4,
                            "5": 4,
                            "6": 4,
                            "7": 4
                        }
                    }
                }
            }
        }
    },
    "training": {
        "loss_fn": {
            "class": "CrossEntropyLoss",
            "takes_net": false,
            "kwargs": {}
        },
        "gd": {
            "opt": {
                "class": "PACTAdam",
                "takes_net": true,
                "kwargs": {
                    "pact_decay": 0.01,
                    "lr": 0.002
                }
            },
            "lr_sched":{
                "class": "HandScheduler",
                "kwargs": {
                    "schedule": {
                        "0":  1,
                        "80": 0.1,
                        "120": 0.01,
                        "150": 0.001

                    }
                }
            }
        },
        "n_epochs": 200,
        "quantize": {
            "function": "get_pact_controllers",
            "kwargs": {
                "schedules": {
                    "linear": {
                        "0": "verbose_on",
                        "1": "start",
                        "100": "freeze"
                    },
                    "activation": {
                        "0": "verbose_on",
                        "1": "start",
                        "100": "freeze"
                    }
                }
            }
        }
    },
    "meters": {
        "train": {
            "compute_profiling_statistic": true,
            "compute_task_statistic": true,
            "tensor_statistics": []
        },
        "valid": {
            "compute_profiling_statistic": true,
            "tensor_statistics": []
        }
    }
}
