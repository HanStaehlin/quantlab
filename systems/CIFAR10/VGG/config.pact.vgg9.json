{
    "data": {
        "train": {
            "dataset": {
                "transform": {
                    "class": "TransformA",
                    "kwargs": {"augment": true}
                }
            },
            "dataloader": {"bs": 256}
        },
        "valid": {
            "dataset": {
                "transform": {
                    "class": "TransformA",
                    "kwargs": {"augment": false}
                }
            },
            "dataloader": {"bs": 512}
        }
    },
    "network": {
        "class": "VGG",
        "kwargs": {
            "capacity": 1,
            "config": "VGG9",
            "use_bn_features": true,
            "use_bn_classifier": true
        },
        "quantize": {
            "function": "quantize_pact",
            "kwargs": {
                "config": {
                    "PACTConv2d": {
                        "quantize": "per_layer",
                        "init_clip": "sawb_asymm",
                        "learn_clip": false,
                        "n_levels": {
                            "features.0$": 4,
                            "features.4$": 4,
                            "features.7$": 4,
                            "features.11$": 4,
                            "features.14$": 4
                        }
                    },
                    "PACTLinear": {
                        "quantize": "per_layer",
                        "init_clip": "sawb_asymm",
                        "learn_clip": false,
                        "symm_wts": true,
                        "n_levels": {
                        }
                    },
                    "PACTUnsignedAct": {
                        "init_clip": "std",
                        "n_levels": {
                            "features.2$": 4,
                            "features.6$": 4,
                            "features.9$": 4,
                            "features.13$": 4,
                            "features.16$": 4
                        },
                        "nb_std": 3
                    }
                }
            }
        }
    },
    "training": {
        "loss_fn": {
            "class": "CrossEntropyLoss",
            "takes_net": false,
            "kwargs": {}
        },
        "gd": {
            "opt": {
                "class": "PACTAdam",
                "takes_net": true,
                "kwargs": {
                    "pact_decay": 0.01,
                    "lr": 0.1
                }
            },
            "lr_sched":{
                "class": "HandScheduler",
                "kwargs": {
                    "schedule": {
                        "0":  1,
                        "15": 1,
                        "100": 0.1,
                        "150": 0.01,
                        "200": 0.001
                    }
                }
            }
        },
        "n_epochs": 200,
        "quantize": {
            "function": "get_pact_controllers",
            "kwargs": {
                "schedules": {
                    "linear": {
                        "0": ["verbose_on", "start"],
                        "175": "freeze"
                    },
                    "activation": {
                        "0": "verbose_on",
                        "8": "start",
                        "175": "freeze"
                    }
                }
            }
        }
    },
    "meters": {
        "train": {
            "compute_profiling_statistic": true,
            "compute_task_statistic": true,
            "tensor_statistics": []
        },
        "valid": {
            "compute_profiling_statistic": true,
            "tensor_statistics": []
        }
    }
}
